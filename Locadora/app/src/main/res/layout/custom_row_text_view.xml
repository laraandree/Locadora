    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvTitulo_row"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvDiretor_row"
        android:layout_below="@+id/tvTitulo_row"
        android:layout_alignLeft="@+id/tvTitulo_row"
        android:layout_alignStart="@+id/tvTitulo_row" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvAno_row"
        android:gravity="left"
        android:layout_alignTop="@+id/tvDiretor_row"
        android:layout_toRightOf="@+id/tvDiretor_row"
        android:layout_toEndOf="@+id/tvDiretor_row" />
</RelativeLayout>